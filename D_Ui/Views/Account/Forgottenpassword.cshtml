@model D_Ui.Models.ViewMode.ForgottenpasswordViewModel

@{
    ViewData["Title"] = "Forgottenpassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-7">
        <div class="card mt-4">
            <div class="card-body">
                <h6 class=" mb-3 text-info"> Forget Password ? </h6>
                <form asp-action="Forgottenpassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">
                            Enter your Registration email address. We will send a password reset link.
                        </label>
                        <input type="email" asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-primary" />
                    </div>
                </form>

                <div class="text-center">
                    <a asp-action="login">Back to Login</a>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>


    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
