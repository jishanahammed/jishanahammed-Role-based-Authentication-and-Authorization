@model D_Ui.Models.ViewMode.RegistrationViewModel

@{
    ViewData["Title"] = "Registration";
}


<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <div class="gov-logo-login-ui text-center">
                    <img src="/assets/icon.png" />
                    <h4 class="mt-3"> Create your Deft UI account </h4>
                </div>
                <form asp-action="Registration" class="mt-5">

                    <div asp-validation-summary="ModelOnly" class="text-danger text-right "></div>
                     <input asp-for="RoleName" value="Candidate" class="form-control" hidden />
                    <div class="form-group row">
                        <label asp-for="FullName" class="control-label col-md-3"></label>
                        <div class="col-md-9">
                            <input asp-for="FullName" class="form-control" />
                        </div>
                        <span asp-validation-for="FullName" class="text-danger text-right  col-12"></span>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Email" class="control-label col-md-3"></label>
                        <div class="col-md-9">
                            <input type="email" asp-for="Email" class="form-control" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger text-right  col-12"></span>
                    </div>

                    <div class="form-group row">
                        <label asp-for="PhoneNumber" class="control-label col-md-3"> Phone Number </label>
                        <div class="col-md-9">
                            <input asp-for="PhoneNumber" class="form-control" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger text-right  col-12"></span>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Designation" class="control-label col-md-3"></label>
                        <div class="col-md-9">
                            <input asp-for="Designation" class="form-control" />
                        </div>
                        <span asp-validation-for="Designation" class="text-danger text-right  col-12"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Department" class="control-label col-md-3"></label>
                        <div class="col-md-9">
                            <input asp-for="Department" class="form-control" />
                        </div>
                        <span asp-validation-for="Department" class="text-danger text-right  col-12"></span>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Password" class="control-label col-md-3"></label>
                        <div class="col-md-9">
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger text-right col-12"></span>
                    </div>

                    <div class="form-group row">
                        <label asp-for="ConfirmPassword" class="control-label col-md-3"></label>
                        <div class="col-md-9">
                            <input asp-for="ConfirmPassword" class="form-control" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger text-right col-12"></span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Registration" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
