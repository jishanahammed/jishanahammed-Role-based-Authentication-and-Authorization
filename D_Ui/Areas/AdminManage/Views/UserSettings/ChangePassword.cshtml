@model D_Ui.Models.ViewMode.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
   
}
<div class="content-header">
    <div class="container-fluid">
        <div class="breadcrumb d-flex justify-content-between align-items-center shadow">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/AdminManage/Home/Index">Home</a></li>
                <li class="breadcrumb-item"><a href="/AdminManage/UserSettings/ChangePassword">Change Password</a></li>
                <li class="breadcrumb-item active">Change Password</li>
            </ol>
            <div>

                <a asp-action="Index"><i class="fa fa-arrow-left mr-2"></i>Back To List</a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-unlock"></i>
                    Change Password
                </h3>

            </div>
            <div class="card-body">
                <div class="tab-content p-0">
                    <div class="row">
                        <div class="col-md-8">
                            <form asp-action="ChangePassword">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                 @Html.HiddenFor(model => model.UserId)
                                 <div class="form-group">
                                    <label asp-for="CurrentPassword" class="control-label"> Current Password</label>
                                    <input asp-for="CurrentPassword" class="form-control" />
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewPassword" class="control-label"> New Password</label>
                                    <input asp-for="NewPassword" class="form-control" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="control-label"> Confirm Password</label>
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Confirm" class="btn btn-primary" />
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
        <script>
        $(document).ready(function () {
            $('#adminUser').addClass('active');

        });

    </script>
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
